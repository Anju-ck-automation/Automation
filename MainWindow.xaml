<Window x:Class="CookieComparerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cookie Comparer" Height="300" Width="400">
    <StackPanel Margin="20">
        <TextBlock FontSize="16" FontWeight="Bold" Margin="0,0,0,10">Select Country:</TextBlock>
        <ComboBox x:Name="CountryComboBox" Margin="0,0,0,10">
            <ComboBoxItem Content="hu" />
            <ComboBoxItem Content="fi" />
            <ComboBoxItem Content="lu" />
            <ComboBoxItem Content="be" />
            <ComboBoxItem Content="lv" />
            <ComboBoxItem Content="cz" />
            <ComboBoxItem Content="fr" />
            <ComboBoxItem Content="id" />
            <ComboBoxItem Content="nl" />
            <ComboBoxItem Content="si" />
            <ComboBoxItem Content="qa" />
            <ComboBoxItem Content="ro" />
            <ComboBoxItem Content="ua" />
            <ComboBoxItem Content="de" />
            <ComboBoxItem Content="lt" />
            <ComboBoxItem Content="at" />
            <ComboBoxItem Content="pl" />
            <ComboBoxItem Content="se" />
            <ComboBoxItem Content="dk" />
            <ComboBoxItem Content="es" />
            <ComboBoxItem Content="sk" />
            <ComboBoxItem Content="gr" />
            <ComboBoxItem Content="bg" />
            <ComboBoxItem Content="hr" />
            <ComboBoxItem Content="it" />
            <ComboBoxItem Content="tr" />
            <ComboBoxItem Content="pt" />
            <ComboBoxItem Content="eg" />
            <ComboBoxItem Content="ee" />
            <ComboBoxItem Content="cy" />
        </ComboBox>
        <Button Content="Compare Cookies" Click="CompareCookies_Click" Height="30" Margin="0,0,0,10"/>
        <TextBlock x:Name="ResultText" Text="Results will be exported to Excel." FontSize="12"/>
    </StackPanel>
</Window>
